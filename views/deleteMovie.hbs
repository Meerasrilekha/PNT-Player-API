<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Deletion</title>
</head>

<body>
    <h1>Delete Movie</h1>
    <a href="/">Go to Dashboard</a>
    {{!-- {{#if successMessage}}
    <p style="color: green;">{{successMessage}}</p>
    {{/if}}
    <ul>
        {{#each movies}}
        <li>
            <img src="{{this.posterPath}}" alt="{{this.title}} Poster" width="100">
            {{this.title}}
            <form action="/delete-movie/{{this._id}}" method="post">
                <button type="submit">Delete</button>
            </form>
        </li>
        {{/each}}

    </ul> --}}

    {{#each movies}}
    <div class="movieDetailsContainer">
        <div class="posterContainer">
            <img src="https://image.tmdb.org/t/p/original/{{this.posterPath}}" alt="Movie Poster">
        </div>
        <div class="detailsTextContainer">
            <h2>{{this.title}}</h2>
            <p style="font-size: 0.8em; margin-bottom:5px">{{this.overview}}</p>
            <p class="release-date" style="font-size: 0.8em; font-weight: bold; color: #005040;">Release Date: {{this.releaseDate}}</p>
            <form action="/delete-movie/{{this._id}}" method="post">
                <button class="delete-btn" type="submit">Delete</button>
            </form>
        </div>
    </div>
    {{/each}}

</body>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
    }

    h1 {
        text-align: center;
    }

    .movieDetailsContainer {
        padding: 10px;
        display: flex;
        align-items: center;
        width: 50%;
        margin: 0 auto;
    }

    .posterContainer {
        margin-right: 20px;
    }

    .posterContainer img {
        width: 100px;
        height: auto;
        border-radius: 10px;
        border: 4px solid #EAC800;
    }

    .detailsTextContainer {
        text-align: left;
    }

    .detailsTextContainer h2 {
        color: #231F20;
        margin-bottom: 10px;
    }

    .detailsTextContainer p {
        color: #231F20;
        margin: 0;
        text-align: justify;
    }

    .delete-btn {
        padding: 10px;
        background-color: #EAC800;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        font-size: 1rem;
        margin-top: 10px;
        transition: background 0.2s;
    }

    .delete-btn:hover {
        background-color: #bfa100;
    }

    a[href="/"] {
        color: #005040;
        margin-left: 14rem;
        font-weight: 500;
        text-decoration: none;
        font-size: 1.2rem;
        display: inline-block;
        margin-bottom: 20px;
    }

    a[href="/"]:hover {
        text-decoration: underline;
    }
</style>

</html>