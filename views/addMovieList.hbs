<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Movie List</title>
</head>

<body>
    <h1>List of Movies</h1>

    <form class="search-container" action="/fetch-movie" method="post">
        <input style="margin-right: 5px; padding: 8px; width: 200px;" type="text" id="searchTerm" name="searchTerm"
            placeholder="Movie Name or ID" required>
        <button class="submit-btn" type="submit">Fetch Details</button>
    </form>

    {{#each movieList}}
    <div class="movieDetailsContainer">
        <div class="posterContainer">
            <img src="https://image.tmdb.org/t/p/original/{{this.poster_path}}" alt="Movie Poster">
        </div>

        <div class="detailsTextContainer">
            <a href="/addMovie/{{this.id}}">
                <h2>{{this.title}}</h2>
            </a>
            <p style="font-size: 0.8em; margin-bottom:5px">{{this.overview}}</p>
            <p class="release-date" style="font-size: 0.8em; font-weight: bold; color: #005040;">Release Date: {{this.release_date}}</p>

        </div>
    </div>
    {{/each}}

</body>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
    }

    h1 {
        text-align: center;
    }

    .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 10px;
    }

    .submit-btn {
        padding: 10px;
        background-color: #005040;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.2s;
    }
    .submit-btn:hover {
        background-color: #003d32;
    }

    .movieDetailsContainer {

        padding: 10px;
        display: flex;
        align-items: center;
        width: 50%;
        margin: 0 auto;
    }

    .posterContainer {
        margin-right: 20px;
    }

    .posterContainer img {
        width: 100px;
        height: auto;
        border-radius: 10px;
        border: 4px solid #EAC800;
    }

    .detailsTextContainer {
        text-align: left;
    }

    .detailsTextContainer h2 {
        color: #231F20;
        margin-bottom: 10px;
    }

    .detailsTextContainer p {
        color: #231F20;
        margin: 0;
        text-align: justify;
    }

    a {
        text-decoration: none;
        color: :'black';
    }

    .search-container input[type="text"] {
        background: #CED5D8;
        color: #231F20;
        border: 2px solid #757575;
        border-radius: 5px;
        padding: 8px;
        margin-right: 5px;
        width: 200px;
    }
    .search-container input[type="text"]::placeholder {
        color: #757575;
        opacity: 1;
    }
</style>

</html>